{
  "name": "roman-numeral-converter-service",
  "version": "1.0.0",
  "private": true,
  "description": "An application to convert the numbers into roman numerals",
  "scripts": {
    "test": "jest",
    "start:server": "node ./dist/server.bundle.cjs --mode production",
    "start:client": "webpack serve --config webpack.client.cjs --mode production",
    "dev:server": "nodemon ./src/server/app.mjs",
    "dev:client": "webpack serve --config webpack.client.cjs --mode development",
    "start:dev": "npm run test && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "webpack --config webpack.server.cjs",
    "build:client": "webpack --config webpack.client.cjs",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "start": "npm run build && concurrently \"npm run start:server\" \"npm run start:client\"",
    "dockerize": "npm run test && docker build -t roman-numeral-converter-service .",
    "docker-run": "docker run -p 8080:8080 -p 3000:3000 roman-numeral-converter-service"
  },
  "author": "gboyanapally@gmail.com",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jsdom-global": "^3.0.2",
    "nodemon": "^3.0.2",
    "postcss-loader": "^8.1.1",
    "sass": "^1.84.0",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-dev-server": "^5.2.0",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-node-externals": "^3.0.0"
  },
  "type": "module"
}
